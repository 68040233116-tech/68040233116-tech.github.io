    <script>
        // Typing Effect
        const typingTexts = [
            '‡∏ú‡∏°‡∏ä‡∏≠‡∏ö‡πÄ‡∏Ç‡∏µ‡∏¢‡∏ô‡πÇ‡∏Ñ‡πâ‡∏î‡πÅ‡∏•‡∏∞‡πÄ‡∏£‡∏µ‡∏¢‡∏ô‡∏£‡∏π‡πâ‡πÄ‡∏ó‡∏Ñ‡πÇ‡∏ô‡πÇ‡∏•‡∏¢‡∏µ‡πÉ‡∏´‡∏°‡πà‡πÜ',
            '‡∏ú‡∏°‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡∏™‡∏£‡πâ‡∏≤‡∏á‡∏ú‡∏•‡∏á‡∏≤‡∏ô‡∏ó‡∏µ‡πà‡∏°‡∏µ‡∏õ‡∏£‡∏∞‡πÇ‡∏¢‡∏ä‡∏ô‡πå‡∏ï‡πà‡∏≠‡∏™‡∏±‡∏á‡∏Ñ‡∏°',
            '‡∏ú‡∏°‡∏´‡∏•‡∏á‡πÉ‡∏´‡∏•‡πÉ‡∏ô‡∏Å‡∏≤‡∏£‡∏≠‡∏≠‡∏Å‡πÅ‡∏ö‡∏ö‡πÄ‡∏ß‡πá‡∏ö‡∏ó‡∏µ‡πà‡∏™‡∏ß‡∏¢‡∏á‡∏≤‡∏°',
            '‡∏ú‡∏°‡∏°‡∏µ‡∏Ñ‡∏ß‡∏≤‡∏°‡∏™‡∏á‡∏™‡∏±‡∏¢‡πÅ‡∏•‡∏∞‡∏ä‡∏≠‡∏ö‡πÅ‡∏Å‡πâ‡∏õ‡∏±‡∏ç‡∏´‡∏≤'
        ];

        let textIndex = 0;
        let charIndex = 0;
        const typingOutput = document.getElementById('typing-output');
        const typingSpeed = 50;
        const erasingSpeed = 30;
        const delayBetween = 2000;

        function typeText() {
            if (charIndex < typingTexts[textIndex].length) {
                typingOutput.textContent += typingTexts[textIndex].charAt(charIndex);
                charIndex++;
                setTimeout(typeText, typingSpeed);
            } else {
                setTimeout(eraseText, delayBetween);
            }
        }

        function eraseText() {
            if (charIndex > 0) {
                typingOutput.textContent = typingTexts[textIndex].substring(0, charIndex - 1);
                charIndex--;
                setTimeout(eraseText, erasingSpeed);
            } else {
                textIndex = (textIndex + 1) % typingTexts.length;
                setTimeout(typeText, 500);
            }
        }

        // Start typing animation
        typeText();

        // Contribution Graph Generator
        function generateContributionGraph() {
            const grid = document.getElementById('contribution-grid');
            const today = new Date();
            const startDate = new Date(today.getFullYear(), today.getMonth() - 12, today.getDate());
            
            // Create cells for 52 weeks
            for (let i = 0; i < 364; i++) {
                const cell = document.createElement('div');
                cell.className = 'contribution-cell';
                
                // Random activity level
                const level = Math.floor(Math.random() * 5);
                cell.classList.add(level-${level});
                
                // Calculate date
                const cellDate = new Date(startDate);
                cellDate.setDate(cellDate.getDate() + i);
                const dateStr = cellDate.toLocaleDateString('th-TH', {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric'
                });
                
                const contributions = level * Math.floor(Math.random() * 10);
                cell.setAttribute('data-tooltip', ${contributions} contributions on ${dateStr});
                
                grid.appendChild(cell);
            }
        }

        // Initialize contribution graph on load
        window.addEventListener('load', generateContributionGraph);

        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth' });
                }
            });
        });

        // Add interest item click animation
        document.querySelectorAll('.interest-item').forEach(item => {
            item.addEventListener('click', function() {
                this.style.animation = 'pulse 0.5s ease';
                setTimeout(() => {
                    this.style.animation = '';
                }, 500);
            });
        });

        // Add pulse animation
        const style = document.createElement('style');
        style.textContent = `
            @keyframes pulse {
                0%, 100% { transform: scale(1); }
                50% { transform: scale(1.05); }
            }
        `;
        document.head.appendChild(style);
    </script>
</body>
</html>
